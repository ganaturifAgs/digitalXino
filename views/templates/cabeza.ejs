</head>
<body>
    <header>
        <div><%= headerTitle || 'Bienvenido a Mi Sitio' %>
            <div id="der" class="rosa"><img src="../img/der-arr" width="100%"  alt=""></div>
            <div id="izq" class="rosa"><img src="../img/der-arr" width="100%"  alt=""></div>
            <div id="countdown" ></div>
            <div id="countTipos">D  H  M  S</div>
        </div>
        <script>
            let cero = (v)=>{ return  v<10 ? `0${v}`:v }
            function updateCountdown() {
                const targetDate = new Date('2025-08-16T14:00:00');
                const now = new Date();
                const diff = targetDate - now;
                if (diff <= 0) {
                    document.getElementById('countdown').textContent = 'Â¡El evento ha comenzado!';
                    return;
                }
                const dias = Math.floor(diff/ (1000*60*60*24))
                const hours = Math.floor((diff % (1000*60*60*24)) / (1000 * 60 * 60));
                const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((diff % (1000 * 60)) / 1000);

                document.getElementById('countdown').textContent =
                    `Faltan: ${dias} . ${cero(hours)} : ${cero(minutes)} : ${cero(seconds)}`;
            }

            updateCountdown();
            setInterval(updateCountdown, 1000);
        </script>
    </header>
